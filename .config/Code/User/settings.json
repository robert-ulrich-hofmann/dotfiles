{
    /**
     * VSCODE
     */

    // BREADCRUMBS
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    "breadcrumbs.icons": true,
    "breadcrumbs.symbolPath": "on",
    "breadcrumbs.symbolSortOrder": "position",

    // CHAT
    "chat.commandCenter.enabled": false,

    // DIFFEDITOR
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "diffEditor.codeLens": true,
    "diffEditor.wordWrap": "inherit",
    "diffEditor.diffAlgorithm": "advanced",
    "diffEditor.maxFileSize": 100,
    "diffEditor.maxComputationTime": 10000,

    // EDITOR
    "editor.guides.indentation": true,
    "editor.detectIndentation": true,
    "editor.indentSize": "tabSize",
    "editor.tabSize": 4,
    "editor.autoIndent": "full",
    "editor.maxTokenizationLineLength": 200000,
    "editor.experimental.asyncTokenization": true,
    "editor.experimental.asyncTokenizationLogging": false,
    "editor.experimental.asyncTokenizationVerification": false,
    "editor.experimental.preferTreeSitter": [],
    "editor.experimental.treeSitterTelemetry": false,
    "editor.colorDecorators": true,
    // no space when "commenting out"
    "editor.comments.insertSpace": false,
    // ZERO vs 0 {[]}
    "editor.fontFamily": "Source Code Pro, Consolas, Courier",
    // fontsize in pixels
    "editor.fontSize": 13,
    // 0 = auto +4, 1-7 multiple, 8+ = fix
    "editor.lineHeight": 0,
    "editor.fontWeight": "normal",
    "editor.fontLigatures": false,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.renderCharacters": true,
    "editor.minimap.scale": 3,
    "editor.minimap.showSlider": "always",
    "editor.minimap.side": "right",
    "editor.minimap.size": "proportional",
    "editor.renderControlCharacters": true,
    "editor.renderFinalNewline": "on",
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [72, 80],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    "editor.wrappingStrategy": "simple",
    "editor.wrappingIndent": "deepIndent",
    "editor.multiCursorModifier": "alt",
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "insert",
    "editor.matchBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.autoClosingBrackets": "always",
    // overwrites themes editor-wide!
    "editor.tokenColorCustomizations": {
        // quick-set all color, don't use but find out scope-grouping
        //"keywords": "#008080",
        //"functions": "#008080",
        //"types": "#008080",
        //"variables": "#008080",
        //"numbers": "#008080",
        //"strings": "#008080",
        //"comments": "#999999",

        // look into textmaterules, more granularity here
        // https://macromates.com/manual/en/language_grammars
        // TODO get all textmaterules here, one setting to rule all languages?
        "textMateRules": [
            {
                "name": "Keywords",
                "scope": ["keyword.control", "keyword.other", "storage.type"],
                "settings": {
                    //"fontStyle": "bold",
                    //"foreground": "#008080"
                }
            },
            //{
            //    "name": "Functions",
            //    "scope": [
            //        "support.function",
            //    ],
            //    "settings": {
            //        "fontStyle": "",
            //        "foreground": "",
            //    }
            //},
            //{
            //    "name": "Types",
            //    "scope": [
            //        "meta.type",
            //        "storage.type",
            //        "support.type",
            //    ],
            //    "settings": {
            //        "fontStyle": "",
            //        "foreground": "",
            //    }
            //},
            //{
            //    "name": "Variables",
            //    "scope": [
            //        "variable",
            //    ],
            //    "settings": {
            //        "fontStyle": "",
            //        "foreground": "",
            //    }
            //},
            {
                "name": "Make all Strings italic",
                "scope": ["string"],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "name": "Make all comments grey",
                "scope": ["comment"],
                "settings": {
                    "foreground": "#999999"
                }
            },
            {
                /** test*/
                /* test */
                // test
                "name": "Make only doc Comments italic",
                "scope": ["comment.block.documentation"],
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },

    // EXPLORER
    "explorer.autoReveal": false,
    "explorer.openEditors.sortOrder": "editorOrder",
    "explorer.openEditors.visible": 5,
    "explorer.openEditors.minVisible": 5,
    "explorer.compactFolders": false,
    "explorer.fileNesting.enabled": false,
    "explorer.fileNesting.expand": false,
    "explorer.enableDragAndDrop": false,
    "explorer.confirmDragAndDrop": true,
    "explorer.confirmDelete": true,
    "explorer.confirmPasteNative": true,
    "explorer.enableUndo": true,
    "explorer.confirmUndo": "verbose",
    "explorer.autoOpenDroppedFile": false,
    "explorer.copyPathSeparator": "auto",
    "explorer.copyRelativePathSeparator": "auto",
    "explorer.decorations.badges": true,
    "explorer.decorations.colors": true,
    "explorer.excludeGitIgnore": false,
    "explorer.expandSingleFolderWorkspaces": true,

    // EXTENSIONS
    "extensions.allowed": "*",
    "extensions.verifySignature": true,
    "extensions.autoCheckUpdates": true,
    "extensions.autoUpdate": false,

    // FILES
    "files.autoSave": "off",
    "files.hotExit": "onExitAndWindowClose",
    "files.trimFinalNewlines": false,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // GIT
    "git.enabled": true,
    // auto refresh leads to annoying blinking badge every 5 seconds
    "git.autorefresh": false,
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
    "git.autoStash": false,
    "git.confirmSync": true,
    "git.terminalAuthentication": true,
    "git.countBadge": "all",
    "git.autoRepositoryDetection": "subFolders",
    "git.openRepositoryInParentFolders": "never",
    "git.allowForcePush": false,
    "git.allowNoVerifyCommit": false,
    "git.openDiffOnClick": true,
    "git.mergeEditor": false,
    "git.enableStatusBarSync": false,
    "git.blame.editorDecoration.enabled": false,
    "git.blame.editorDecoration.template": "${subject}, ${authorName} (${authorDateAgo})",
    "git.blame.statusBarItem.enabled": true,
    "git.blame.statusBarItem.template": "\"${subject}\" (Show Diff)",

    // GITHUB
    "github.gitAuthentication": false,
    "github.gitProtocol": "https",
    "github.branchProtection": true,

    // OUTLINE
    "outline.icons": true,
    "outline.showNamespaces": true,
    "outline.collapseItems": "alwaysCollapse",
    "outline.problems.enabled": true,
    "outline.problems.badges": true,
    "outline.problems.colors": true,

    // SEARCH
    "search.showLineNumbers": true,
    "search.collapseResults": "alwaysExpand",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    // ripgrep will chocke on this in very large projects (e.g. $HOME)
    "search.followSymlinks": false,
    "search.ripgrep.maxThreads": 4,
    "search.useIgnoreFiles": false,

    // TELEMETRY
    "telemetry.telemetryLevel": "off",

    // TERMINAL
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.showExitAlert": true,
    // ZERO vs 0 {[]}
    "terminal.integrated.fontFamily": "Source Code Pro, Consolas, Courier",
    "terminal.integrated.fontWeight": "normal",
    // fontsize in pixels
    "terminal.integrated.fontSize": 10,
    "terminal.integrated.lineHeight": 1,
    // linux
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "args": [],
            "icon": "terminal-bash"
        },
        "fish": {
            "path": "fish",
            "args": [],
            "icon": "terminal-linux"
        },
        "tmux": {
            "path": "tmux",
            "args": [],
            "icon": "terminal-tmux"
        }
    },
    // windows
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.profiles.windows": {
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "PowerShell": {
            "source": "PowerShell",
            "args": [],
            "icon": "terminal-powershell"
        },
        "Git Bash": {
            "source": "Git Bash",
            "args": [],
            "icon": "terminal-bash"
        }
    },
    "terminal.external.windowsExec": "${env:userprofile}\\AppData\\Local\\Programs\\Git\\git-bash.exe",

    // UPDATE
    "update.enableWindowsBackgroundUpdates": true,
    "update.mode": "default",
    "update.showReleaseNotes": true,

    // WINDOW
    // window.zoomLevel = +/- 20% per 1 unit
    "window.commandCenter": false,
    "window.customMenuBarAltFocus": true,
    "window.enableMenuBarMnemonics": true,
    // "native" fucks up the context menu on kde/linux!
    "window.titleBarStyle": "custom",
    "window.customTitleBarVisibility": "auto",
    "window.doubleClickIconToClose": true,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}${appName}",
    "window.menuBarVisibility": "visible",
    "window.autoDetectColorScheme": false,
    "window.zoomPerWindow": false,
    "window.closeWhenEmpty": false,
    "window.openFilesInNewWindow": "on",
    "window.openFoldersInNewWindow": "on",
    "window.restoreWindows": "preserve",
    "window.confirmBeforeClose": "always",

    // WORKBENCH
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "vs-minimal",
    "workbench.layoutControl.enabled": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.localHistory.enabled": true,
    "workbench.editor.languageDetection": false,
    "workbench.editor.splitOnDragAndDrop": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.colorTheme": "acme",
    "workbench.settings.editor": "json",
    "workbench.editor.closeEmptyGroups": true,
    "workbench.preferredLightColorTheme": "acme",
    "workbench.preferredDarkColorTheme": "Default Dark+",
    "workbench.layoutControl.type": "menu",
    // put global color customizations on this level, but it will break everything
    "workbench.colorCustomizations": {
        // TODO: do full, explicit for all keys, theme it and ship it
        // TODO: do acme76 in system76 colors
        // acme is not complete, set every value explicitly
        "[acme]": {
            "activityBar.background": "#eaffff",
            "activityBar.border": "#000000",
