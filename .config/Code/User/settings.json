            //"minimapGutter.addedBackground": "#ff0000",
            //"minimapGutter.deletedBackground": "#ff0000",
            //"minimapGutter.modifiedBackground": "#ff0000",
            //"minimapSlider.activeBackground": "#eaffff",
            //"minimapSlider.background": "#ffffea00",
            //"minimapSlider.hoverBackground": "#ff0000",

            "input.background": "#eaffff",
            "input.border": "#000000",
            "input.foreground": "#000000",
            "input.placeholderForeground": "#000000",

            "panel.background": "#ffffea",

            "selection.background": "#eeee9e",

            "sideBar.dropBackground": "#99994c",
            "sideBar.background": "#eaffff",
            "sideBar.border": "#000000",
            "sideBar.foreground": "#000000",

            "sideBarSectionHeader.background": "#eaffff",

            "scrollbar.shadow": "#8888cc",

            // todo scrollbar
            "scrollbarSlider.activeBackground": "#8888cc",
            "scrollbarSlider.background": "#8888cc",
            "scrollbarSlider.hoverBackground": "#8888cc",

            "statusBar.background": "#eaffff",
            "statusBar.border": "#000000",
            "statusBar.foreground": "#000000",
            "statusBar.debuggingBorder": "#000000",
            "statusBar.debuggingForeground": "#000000",
            "statusBar.debuggingBackground": "#eaffff",
            "statusBar.noFolderBorder": "#000000",
            "statusBar.noFolderForeground": "#000000",
            "statusBar.noFolderBackground": "#eaffff",

            "tab.activeBackground": "#ffffea",

            "tab.activeBorder": "#000000",
            "tab.activeBorderTop": "#eaffff",
            "tab.activeForeground": "#000000",
