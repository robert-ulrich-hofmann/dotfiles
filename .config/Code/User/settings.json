{
    /**
       VSCODE
    */

    // breadcrumbs
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    "breadcrumbs.icons": true,
    "breadcrumbs.symbolPath": "on",

    // diffEditor
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,

    // editor
    "editor.guides.indentation": true,
    "editor.maxTokenizationLineLength": 200000,
    "editor.experimental.asyncTokenization": true,
    "editor.experimental.asyncTokenizationLogging": false,
    "editor.experimental.asyncTokenizationVerification": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode", // todo
    "editor.colorDecorators": true,
    "editor.comments.insertSpace": false, // no space when "commenting out"
    "editor.fontFamily": "Source Code Pro, Consolas, monospace", // ZERO vs 0 {[]}
    "editor.fontSize": 12,
    "editor.lineHeight": 0, // 0 = auto +4, 1-7 multiple, 8+ = fix
    "editor.fontWeight": "normal",
    "editor.fontLigatures": false,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 100,
    "editor.minimap.renderCharacters": true,
    "editor.minimap.scale": 3,
    "editor.minimap.showSlider": "always",
    "editor.minimap.side": "right",
    "editor.minimap.size": "proportional",
    "editor.renderControlCharacters": true,
    "editor.renderFinalNewline": "on",
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [72, 80, 100],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.wrappingStrategy": "simple",
    "editor.wrappingIndent": "deepIndent",
    "editor.multiCursorModifier": "alt",
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.matchBrackets": "always",
    "editor.bracketPairColorization.enabled": false,
    "editor.autoClosingBrackets": "always",
    // overwrites themes editor-wide!
    "editor.tokenColorCustomizations": {
        // quick-set all color, don't use but find out scope-grouping
        //"keywords": "#008080",
        //"functions": "#008080",
        //"types": "#008080",
        //"variables": "#008080",
        //"numbers": "#008080",
        //"strings": "#008080",
        //"comments": "#999999",

        // look into textmaterules, more granularity here
        // https://macromates.com/manual/en/language_grammars
        // TODO get all textmaterules here, one setting to rule all languages?
        "textMateRules": [
        {
            "name": "Keywords",
            "scope": ["keyword.control", "keyword.other", "storage.type"],
            "settings": {
                //"fontStyle": "bold",
                //"foreground": "#008080"
            }
        },
        //{
        //    "name": "Functions",
        //    "scope": [
        //        "support.function",
        //    ],
        //    "settings": {
        //        "fontStyle": "",
        //        "foreground": "",
        //    }
        //},
        //{
        //    "name": "Types",
        //    "scope": [
        //        "meta.type",
        //        "storage.type",
        //        "support.type",
        //    ],
        //    "settings": {
        //        "fontStyle": "",
        //        "foreground": "",
        //    }
        //},
        //{
        //    "name": "Variables",
        //    "scope": [
        //        "variable",
        //    ],
        //    "settings": {
        //        "fontStyle": "",
        //        "foreground": "",
        //    }
        //},
        {
            "name": "Make all Strings italic",
            "scope": ["string"],
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "name": "Make all comments grey",
            "scope": ["comment"],
            "settings": {
                "foreground": "#999999"
            }
        },
        {
            /** test*/
            /* test */
            // test
            "name": "Make only doc Comments italic",
            "scope": ["comment.block.documentation"],
            "settings": {
                "fontStyle": "italic"
            }
        }
        ]
    },

    // explorer
    "explorer.autoReveal": false,
    "explorer.openEditors.visible": 9,
    "explorer.openEditors.minVisible": 0,
    "explorer.compactFolders": false,
    "explorer.enableDragAndDrop": false,
    "explorer.confirmDragAndDrop": true,
    "explorer.confirmDelete": true,
    "explorer.confirmPasteNative": true,
    "explorer.enableUndo": true,
    "explorer.confirmUndo": "verbose",
    "explorer.autoOpenDroppedFile": false,
    "explorer.copyRelativePathSeparator": "auto",

    // extensions
    "extensions.autoCheckUpdates": true,
    "extensions.autoUpdate": false,

    // files
    "files.autoSave": "off",
    "files.trimFinalNewlines": false,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // git
    "git.enabled": true,
    "git.terminalAuthentication": true,
    "git.countBadge": "all",
    "git.autoRepositoryDetection": "subFolders",
    "git.openRepositoryInParentFolders": "never",
    "git.mergeEditor": false,
    "git.allowForcePush": false,
    "git.allowNoVerifyCommit": false,
    "git.autofetch": false,
    "git.autofetchPeriod": 180,
    "git.autoStash": false,
    "git.autorefresh": false,

    // github
    "github.gitAuthentication": false,

    // languages
    "typescript.updateImportsOnFileMove.enabled": "never",
    "html.format.enable": false,
    "html.autoClosingTags": false,

    // outline
    "outline.showNamespaces": true,

    // search
    "search.showLineNumbers": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    "search.followSymlinks": false,
    "search.ripgrep.maxThreads": 4,
    "search.useIgnoreFiles": false,

    // telemetry
    "telemetry.telemetryLevel": "off",

    // terminal
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.showExitAlert": true,
    "terminal.integrated.fontFamily": "Source Code Pro, Consolas, monospace", // ZERO vs 0 {[]}
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 1,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    //"terminal.external.windowsExec": "${env:userprofile}\\AppData\\Local\\Programs\\Git\\git-bash.exe",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
        "source": "PowerShell",
        "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },

    // update
    "update.enableWindowsBackgroundUpdates": true,
    "update.mode": "start",
    "update.showReleaseNotes": true,

    // window
    "window.titleBarStyle": "custom", // "native" fucks up the context menu on kde/linux!
    "window.customTitleBarVisibility": "never",
    "window.commandCenter": false,
    "window.menuBarVisibility": "visible",
    "window.customMenuBarAltFocus": true,
    "window.enableMenuBarMnemonics": true,
    "window.autoDetectColorScheme": false,
    "window.zoomLevel": -1,
    "window.zoomPerWindow": false,

    // workbench
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "vs-minimal",
    "workbench.layoutControl.enabled": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.localHistory.enabled": true,
    "workbench.editor.languageDetection": false,
    "workbench.editor.splitOnDragAndDrop": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.colorTheme": "acme",
    "workbench.settings.editor": "json",
    "workbench.editor.closeEmptyGroups": true,
    "workbench.preferredLightColorTheme": "acme",
    "workbench.preferredDarkColorTheme": "Default Dark+",
    "workbench.layoutControl.type": "menu",
    // put global color customizations on this level, but it will break everything
    "workbench.colorCustomizations": {
